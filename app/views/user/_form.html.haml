= form_for @user, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :address, :class => 'control-label'
    .controls
      = f.text_field :address, :class => 'text_field'
  .control-group
    = f.label :password, :class => 'control-label'
    .controls
      = f.text_field :password, :class => 'text_field'
  .control-group
    = f.label :enabled, :class => 'control-label'
    .controls
      = f.number_field :enabled, :class => 'number_field'
  .control-group
    = f.label :telephone, :class => 'control-label'
    .controls
      = f.number_field :telephone, :class => 'number_field'
  .control-group
    = f.label :habitants_number, :class => 'control-label'
    .controls
      = f.number_field :habitants_number, :class => 'number_field'
  .control-group
    = f.label :residential_id, :class => 'control-label'
    .controls
      = f.number_field :residential_id, :class => 'number_field'
  .control-group
    = f.label :user_status_id, :class => 'control-label'
    .controls
      = f.number_field :user_status_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), user_path, :class => 'btn'
