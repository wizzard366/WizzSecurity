= form_for @agent do |f|
  -if @agent.errors.any?
    #error_explanation
      %h2= "#{pluralize(@agent.errors.count, "error")} prohibited this agent from being saved:"
      %ul
        - @agent.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :residential_id
    = f.number_field :residential_id
  .actions
    = f.submit 'Save'
