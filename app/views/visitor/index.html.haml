- model_class = Visitor.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:identification)
      %th= model_class.human_attribute_name(:idpictureurl)
      %th= model_class.human_attribute_name(:residential_id)
      %th= model_class.human_attribute_name(:visitor_status_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @visitors.each do |visitor|
      %tr
        %td= link_to visitor.id, visitor_path(visitor)
        %td= visitor.name
        %td= visitor.identification
        %td= visitor.idpictureurl
        %td= visitor.residential_id
        %td= visitor.visitor_status_id
        %td=l visitor.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_visitor_path(visitor), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), visitor_path(visitor), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_visitor_path, :class => 'btn btn-primary'
