- model_class = Admin.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:user_name)
      %th= model_class.human_attribute_name(:password)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:residential_id)
      %th= model_class.human_attribute_name(:admin_status_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @admins.each do |admin|
      %tr
        %td= link_to admin.id, admin_path(admin)
        %td= admin.name
        %td= admin.user_name
        %td= admin.password
        %td= admin.description
        %td= admin.residential_id
        %td= admin.admin_status_id
        %td=l admin.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_path(admin), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_path(admin), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_path, :class => 'btn btn-primary'
